for_platform :ios do
  platform("ios")
  app_identifier "uk.co.adam-young.CrimeExplorer,uk.co.adam-young.CrimeExplorer.watchkitapp,uk.co.adam-young.CrimeExplorer.watchkitapp.watchkitextension"
end

